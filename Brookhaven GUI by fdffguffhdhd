--!strict
local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- شاشة البداية
local splashGui = Instance.new("ScreenGui", playerGui)
splashGui.Name = "SplashItachi"
splashGui.ResetOnSpawn = false

local bg = Instance.new("Frame", splashGui)
bg.Size = UDim2.new(1,0,1,0)
bg.BackgroundColor3 = Color3.new(0,0,0)

local eye = Instance.new("ImageLabel", bg)
eye.Size = UDim2.new(0, 300, 0, 300)
eye.Position = UDim2.new(0.5, -150, 0.5, -150)
eye.BackgroundTransparency = 1
eye.Image = "rbxassetid://1330709741" -- صورة عين إيتاشي

local sound = Instance.new("Sound", splashGui)
sound.SoundId = "rbxassetid://911882456" -- صوت مناسب لإيتاشي
sound.Volume = 0.6
sound:Play()

-- عرض لافتة "مطور عزوز 🇧🇷"
local devTagGui = Instance.new("ScreenGui", playerGui)
devTagGui.Name = "DevTag"

local tag = Instance.new("TextLabel", devTagGui)
tag.Size = UDim2.new(0, 250, 0, 40)
tag.Position = UDim2.new(0, 10, 1, -50)
tag.BackgroundTransparency = 0.5
tag.BackgroundColor3 = Color3.fromRGB(20,20,20)
tag.TextColor3 = Color3.new(1,1,1)
tag.Font = Enum.Font.GothamBold
tag.TextSize = 22
tag.Text = "مطور عزوز 🇧🇷"

-- تحميل GUI دلتا (بدون مفتاح وبدون قائمة معلومات)
local function loadDelta()
    local url = "https://raw.githubusercontent.com/hdhjvcfik/KAYHUB/main/DMC-BrookeHaven.lua"
    local success, response = pcall(function()
        return game:HttpGet(url)
    end)

    if success and response then
        -- إزالة نظام المفتاح من السكربت
        local cleanScript = response:gsub("[^\r\n]*KeySystem[^\r\n]*\r?\n?", "") -- يحذف كل سطر فيه KeySystem
        cleanScript = cleanScript:gsub("infoTab%[[^%]]*%]%s*=%s*{.-}", "") -- يحذف قائمة المعلومات
        loadstring(cleanScript)()
    else
        warn("فشل تحميل سكربت دلتا من GitHub.")
    end
end

-- تأخير ثم تشغيل دلتا GUI
task.delay(5, function()
    splashGui.Enabled = false
    loadDelta()
end)
