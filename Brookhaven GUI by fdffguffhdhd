-- FryHub GUI by fdffguffhdhd | Inspired by Delta GUI

local FryHub = Instance.new("ScreenGui", game.CoreGui)
FryHub.Name = "FryHubDelta"

-- (أضف الكود الخاص بالواجهة المتحركة مع صورة أنمي وصوت كما أرسلته من قبل)

-- ... [كود الدخول الأنمي وصوت]

-- بعد انتهاء الدخول، ننشئ القائمة الرئيسية:
local MainFrame = Instance.new("Frame", FryHub)
MainFrame.Size = UDim2.new(0, 450, 0, 400)
MainFrame.Position = UDim2.new(0.5, -225, 0.5, -200)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

-- عنوان
local TitleLabel = Instance.new("TextLabel", MainFrame)
TitleLabel.Size = UDim2.new(1, 0, 0, 50)
TitleLabel.Text = "FryHub | by fdffguffhdhd"
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
TitleLabel.Font = Enum.Font.GothamBlack
TitleLabel.TextScaled = true
TitleLabel.BackgroundTransparency = 1

-- زر Brookhaven
local BrookButton = Instance.new("TextButton", MainFrame)
BrookButton.Size = UDim2.new(0.8, 0, 0, 40)
BrookButton.Position = UDim2.new(0.1, 0, 0.3, 0)
BrookButton.Text = "Brookhaven Hub Script"
BrookButton.BackgroundColor3 = Color3.fromRGB(255, 255, 0)
BrookButton.TextColor3 = Color3.fromRGB(0, 0, 0)
BrookButton.Font = Enum.Font.GothamBold
BrookButton.TextScaled = true
Instance.new("UICorner", BrookButton).CornerRadius = UDim.new(0, 8)

BrookButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/OpenSourceEngine/Script/refs/heads/main/Brookhaven.lua", true))()
end)
